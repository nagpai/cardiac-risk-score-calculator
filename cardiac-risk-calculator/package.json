{
  "name": "cardiac-risk-calculator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:prod": "NODE_ENV=production npm run build",
    "build:analyze": "VITE_BUILD_ANALYZE=true npm run build",
    "build:stats": "npm run build:analyze && echo 'Bundle analysis available at dist/stats.html'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "preview:prod": "npm run build:prod && vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:comprehensive": "node scripts/test-comprehensive.js",
    "test:integration": "vitest run src/__tests__/integration.test.tsx",
    "test:accessibility": "vitest run src/__tests__/accessibility.test.tsx",
    "test:performance": "vitest run src/__tests__/performance.test.tsx",
    "test:cross-browser": "vitest run src/__tests__/crossBrowser.test.tsx",
    "test:e2e": "vitest run src/__tests__/e2e-validation.test.tsx",
    "test:coverage": "vitest run --coverage",
    "perf:test": "npm run build && npm run preview",
    "deploy:build": "npm run test:run && npm run lint && npm run build:prod",
    "deploy:preview": "npm run deploy:build && npm run preview",
    "deploy:validate": "npm run typecheck && npm run lint && npm run test:run && npm run test:e2e",
    "deploy:full": "npm run deploy:validate && npm run build:prod && npm run build:analyze",
    "deploy:check": "node scripts/validate-deployment.js",
    "build:production": "node scripts/build-production.js",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:install": "npm run clean && npm install",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run test:run"
  },
  "dependencies": {
    "chart.js": "^4.5.0",
    "react": "^19.1.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@eslint/js": "^9.32.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^4.1.11",
    "terser": "^5.43.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.1.0",
    "vitest": "^3.2.4"
  }
}
